<h3 class="page-title">
	Insurance Rating<small> demonstration Ruby on Rails project</small>
</h3>
<ul class="breadcrumb">
	<li>
		<i class="icon-home"></i>
		<a href="/">Home</a> 
	</li>
</ul>
<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="form-horizontal form-view">
	  <h3 class="form-section">Truck</h3>
	  <div class="row-fluid">
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Type:</label>
				  <div class="controls">
					  <%= @truck.type %>
				  </div>
			  </div>
		  </div>
		  
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Territory Code:</label>
				  <div class="controls">
					  <%= @truck.territory %>
				  </div>
			  </div>
		  </div>
		  
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Business Use:</label>
				  <div class="controls">
					  <%= @truck.business_use %>
				  </div>
			  </div>
		  </div>
	  </div>
	  
	  <div class="row-fluid">
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Fleet/Non-Fleet:</label>
				  <div class="controls">
					  <%= @truck.fleet_nonfleet %>
				  </div>
			  </div>
		  </div>
		  <!--span-->
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Make:</label>
				  <div class="controls">
					  <%= @truck.make %>
				  </div>
			  </div>
		  </div>
		  <!--span-->
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Model Year:</label>
				  <div class="controls">
					  <%= @truck.model_year %>
				  </div>
			  </div>
		  </div>
	  </div>
	  
	  <div class="row-fluid">
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Cost New:</label>
				  <div class="controls">
					  <span class="text">
						  <%= number_to_currency(@truck.cost_new )%>
					  </span>
				  </div>
			  </div>
		  </div>
		  <!--/span-->
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label">Age Group:</label>
				  <div class="controls">
					  <%= @truck.age_group %>
				  </div>
			  </div>
		  </div>
		  <!--row4-->
		  <div class="span3 ">
			  <div class="control-group">
				  <label class="control-label" >Size Class:</label>
				  <div class="controls">
					  <%= @truck.size_class %>
				  </div>
			  </div>
		  </div>
	  </div>
	  
	  <div class="row-fluid">
		  <div class="span6 ">
			  <div class="control-group">
				  <label class="control-label">Gross Vehicle Weight:</label>
				  <div class="controls">
					  <%= @truck.gvw %>
				  </div>
			  </div>
		  </div>
		  
		  <div class="span6 ">
			  <div class="control-group">
				  <label class="control-label">Gross Comb. Weight:</label>
				  <div class="controls">
					  <%= @truck.gcw %>
				  </div>
			  </div>
		  </div>
	  </div>
  </div>
</div>


<%= link_to 'Edit', edit_truck_path(@truck) %> |
<%= link_to 'Back', trucks_path %>
