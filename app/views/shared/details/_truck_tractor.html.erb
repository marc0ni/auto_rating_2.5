<%= form_for :truck_tractor, remote: true  do |f|%>
<div class="container-fluid">
	<!-- BEGIN FORM-->
	<form action="#" class="form-horizontal">
		<div class="row-fluid">
			<!--/span-->
			<div class="span4 ">
				<div class="control-group">
					<label class="control-label">Primary Code</label>
					<div class="controls">
						<input type="text" class="m-wrap span12" <%= f.text_field :primary_code %>
					</div>
				</div>
			</div>
			<!--span-->
			<div class="span4 ">
				<div class="control-group">
					<label class="control-label">Business Use</label>
					<div class="controls">
						<select class="m-wrap span12"<%= f.select :business_use, [ 'Service', 'Retail', 'Commercial'], :prompt => 'Select One' %></select>
					</div>
				</div>
			</div>
			<!--span-->
			<div class="span4 ">
				<div class="control-group">
					<label class="control-label">Fleet/Non-Fleet</label>
					<div class="controls">
						<select class="m-wrap span12"<%= f.select :fleet_nonfleet, [ 'Fleet', 'Non-Fleet'], :prompt => 'Select One' %></select>
					</div>
				</div>
			</div>
		</div>
		<div class="row-fluid">	
			<!--span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label">Make</label>
					<div class="controls">
						<input type="text" class="m-wrap span12" <%= f.text_field :model_make %>
					</div>
				</div>
			</div>
			<!--span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label">Model Year</label>
					<div class="controls">
						<input type="text" class="m-wrap span12" <%= f.text_field :model_year %>
					</div>
				</div>
			</div>
			<!--/row 2-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label">Cost New</label>
					<div class="controls">
						<input type="text" class="m-wrap span12" <%= f.text_field :cost_new %>
					</div>
				</div>
			</div>
			<!--/span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label">Age Group</label>
					<div class="controls">
						<select class="m-wrap span12"<%= f.select :age_group, [ '1', '2', '3', '4', '5', '6'], :prompt => 'Select One' %></select>
					</div>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<!--span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label" >Size Class</label>
					<div class="controls">
						<select class="m-wrap span12"<%= f.select :size_class, [ 'Up to 45,000 lbs', 'Over 45,000 lbs'], :prompt => 'Select One' %></select>
												</div>
					</div>
				</div>
			<!--span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label" >Radius Class</label>
					<div class="controls">
						<select class="m-wrap span12"
						<%= f.select :radius_class, [ '0 - 50 miles', '51-200 miles', 'Over 200 miles', ], :prompt => 'Select One' %></select>
					</div>
				</div>
			</div>
			<!--span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label">Gross Vehicle Weight</label>
					<div class="controls">
						<input type="text" class="m-wrap span12" <%= f.text_field :gross_vehicle_weight %>
					</div>
				</div>
			</div>
			<!--span-->
			<div class="span3 ">
				<div class="control-group">
					<label class="control-label">Gross Combination Weight</label>
					<div class="controls">
						<input type="text" class="m-wrap span12" <%= f.text_field :gross_combination_weight %>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
</div>
  
<% end %>

