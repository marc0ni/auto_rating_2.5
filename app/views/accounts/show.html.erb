<h3 class="page-title">
	Insurance Rating<small> demonstration Ruby on Rails project</small>
</h3>
<ul class="breadcrumb">
	<li>
		<i class="icon-home"></i>
		<a href="/">Home</a> 
	</li>
</ul>
<p id="notice"><%= notice %></p>

<div class="form-horizontal form-view">
	<h3> View Account Info -  <%= @account.name %> </h3>
	<h3 class="form-section">Address</h3>
	<div class="row-fluid">
		<div class="span12 ">
			<div class="control-group">
				<label class="control-label" >Street:</label>
				<div class="controls">
					<span class="text"><%= @account.address %></span>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span3 ">
			<div class="control-group">
				<label class="control-label" >City:</label>
				<div class="controls">
					<span class="text"><%= @account.city %></span>
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="span3">
			<div class="control-group">
				<label class="control-label" >State:</label>
				<div class="controls">
					<span class="text"><%= @account.state %></span>
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="span3 ">
			<div class="control-group">
				<label class="control-label" >Post Code:</label>
				<div class="controls">
					<span class="text"><%= @account.zip %></span>
				</div>
			</div>
		</div>
	</div>
</div>
	

</p>

<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>

